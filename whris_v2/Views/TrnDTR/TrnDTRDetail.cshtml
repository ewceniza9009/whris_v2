    }

    function GetEmployees(employeeId)
    {
        for (var idx = 0, length = employees.length; idx < length; idx++)
        {
            if (employees[idx].Id === employeeId)
            {
                return employees[idx].FullName;
            }
        }

        return null;
    }

    function CmbShiftCode(container, options)
